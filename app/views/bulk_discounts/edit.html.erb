<h1>Edit Bulk Discount</h1>
<%= form_with model: [@merchant, @discount], method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, step: :any, value: @discount.percentage %>

  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, value: @discount.quantity_threshold %>

  <%= f.submit 'Submit' %>
<% end %>
